<% if @task.errors.blank? %>	$('#tasks tr:last').after("<%= escape_javascript(render :partial => 'task', :locals => {:task => @task}) -%>");	$('#new_task').hide();	$('#new-task-form')[0].reset();	$('#task-<%= @task.id %>').hide();	$('#task-<%= @task.id %>').fadeIn();	$('#errors').replaceWith('');<% else %>	$('#errors').replaceWith("<%= escape_javascript(@task.errors.full_messages.join("<br />")) %>");<% end %>